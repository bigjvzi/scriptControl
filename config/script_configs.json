{
    "文件处理器": {
        "module": "file_processor",
        "description": "处理文本文件的基础脚本",
        "preview": true,
        "parameters": [
            {
                "name": "input_file",
                "label": "输入文件路径",
                "type": "file",
                "required": true
            },
            {
                "name": "mode",
                "label": "处理模式",
                "type": "dropdown",
                "options": ["模式A", "模式B", "模式C"],
                "default": "模式A"
            },
            {
                "name": "output_dir",
                "label": "输出目录",
                "type": "file",
                "filetype": "directory"
            }
        ]
    },
    "数据分析器": {
        "module": "data_analyzer",
        "description": "执行数据分析任务",
        "parameters": [
            {
                "name": "data_source",
                "label": "数据源路径",
                "type": "file"
            },
            {
                "name": "threshold",
                "label": "分析阈值",
                "type": "number",
                "default": 0.5
            }
        ]
    }
}